    <%= render_partial 'partials/nav' %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <%= render_partial 'partials/sidebar' %>
        </div><!--/span-->
        <div class="span9">
          <%= yield %>
        </div><!--/span-->
      </div><!--/row-->
      <hr>
    <%= render_partial 'partials/footer' %>
    </div><!--/.fluid-container-->
